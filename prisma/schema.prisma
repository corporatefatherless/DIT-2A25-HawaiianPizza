generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model carParts {
  id            Int     @id @default(autoincrement())
  name          String
  type          String
  price_display String
  description   String
  partId        String?
}

model cars {
  id            Int    @id @default(autoincrement())
  name          String
  type          String
  power         String
  price_display String
  description   String
  carsid        String
}

//Item model for items in the category, assisted by AI
model Item {
  id          Int      @id @default(autoincrement())
  name        String
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
}
model CartItem {
  id         Int      @id @default(autoincrement())
  productId  Int      
  name       String   
  type       String?  
  unitPrice  Int      
  quantity   Int      @default(1)
  createdAt  DateTime @default(now())
}
